<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<configuration>
  <driver id="solaredge">
    <name>SolarEdge</name>
    <description><![CDATA[
        <a href="http://solaredge.com">
          <img src="https://isc-konstanz.github.io/OpenSolarEdge/img/solaredge-logo.png" 
               height="32" width="160" "alt="SolarEdge">
        </a><br>
        This driver implements the access to the SolarEdge Cloud-Based Monitoring Platform.
      ]]>
    </description>
    
    <deviceAddress>
      <syntax>
        <keyValue>false</keyValue>
        <separator>;</separator>
      </syntax>

      <option id="address">
        <name>Url of SolarEdge Site</name>
        <description><![CDATA[
        	Url of SolarEdge Site.<br>
        	See: <a href="https://www.solaredge.com/sites/default/files/se_monitoring_api.pdf">
			SolarEdge Monitoring Server API</a><br><br>
            <b>Example:http://monitoringapi.solaredge.com/</b> 
          ]]>
        </description>
        <mandatory>false</mandatory>
        <type>STRING</type>
        <default>http://monitoringapi.solaredge.com</default>
      </option>

      <option id="siteId">
        <name>Site Id</name>
        <description><![CDATA[
        	Site Id of SolarEdge Site.<br><br>
          ]]>
        </description>
        <mandatory>true</mandatory>
        <type>INTEGER</type>
      </option>
    </deviceAddress>

    <deviceSettings>
       <syntax>
        <keyValue assignment="=">true</keyValue>
        <separator>;</separator>
      </syntax>
      
      <option id="authentication">
        <name>Authentication</name>
        <description><![CDATA[
        	Authentication for access the site.<br><br>
          ]]>
        </description>
        <mandatory>true</mandatory>
        <type>STRING</type>
      </option>      
    </deviceSettings>

    <channelAddress>
      <syntax>
        <keyValue>false</keyValue>
      </syntax>
      <option id="request">
        <name>Request</name>
        <description>Requested value</description>
        <mandatory>true</mandatory>
        <type>STRING</type>
        <selection>
          <validate>false</validate>
          <item value="energyDetails Production">Production energy meter</item>
          <item value="energyDetails Consumption">Consumption energy meter</item>
          <item value="energyDetails SelfConsumption">Virtual energy self-consumption</item>
          <item value="energyDetails FeedIn">Export energy to GRID meter</item>
          <item value="energyDetails Purchased">Import energy from GRID meter</item>
          <item value="powerDetails Production">AC Production power meter</item>
          <item value="powerDetails Consumption">Consumption power meter</item>
          <item value="powerDetails SelfConsumption">Virtual power self-consumption</item>
          <item value="powerDetails FeedIn">Export power to GRID meter</item>
          <item value="powerDetails Purchased">Import power from GRID meter</item>
          <item value="storageData power">Battery Power</item>
          <item value="storageData batteryState">Battery State</item>
          <item value="storageData lifeTimeEnergyDischarged">Energy discharged from Battery</item>
          <item value="storageData batteryPercentageState">Battery state of charge as percentage of the available capacity</item>
        </selection>
      </option>
    </channelAddress>
    
    <channelSettings>
       <syntax>
        <keyValue assignment="=">true</keyValue>
        <separator>;</separator>
      </syntax>

     <option id="timeUnit">
        <name>Time Unit</name>
        <description><![CDATA[
            <br>Time difference until this channel sends a next http request.<br>
			The Time Unit can depend on the http request send. For detailed information 
			see <a href="https://www.solaredge.com/sites/default/files/se_monitoring_api.pdf">
			SolarEdge Monitoring Server API</a>          
          ]]>
        </description>
        <mandatory>false</mandatory>
        <type>STRING</type>
        <selection>
          <validate>true</validate>
          <item value="FIVE_MINUTE">5 Minutes</item>
          <item value="QUARTER_OF_AN_HOUR">15 Minutes</item>
          <item value="HALF_OF_AN_HOUR">30 Minutes</item>
          <item value="HOUR">1 Hour</item>
          <item value="DAY">1 Day</item>
          <item value="WEEK">1 Week</item>
          <item value="MONTH">1 Month</item>
          <item value="YEAR">1 Year</item>
        </selection>
      </option>
      <option id="serialNumber">
        <name>Serial Number</name>
        <description><![CDATA[
            The Serial Number of the channel device only for Inverter Technical 
            Data, Equipment Change Log, Storage Data reuqests<br><br>            
            <b>Example:12345678-90</b> 
          ]]>
        </description>
        <mandatory>false</mandatory>
        <type>STRING</type>
      </option>
    </channelSettings>
  </driver>
</configuration>
    
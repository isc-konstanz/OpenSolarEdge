<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<configuration>
  <driver id="solaredge">
    <name>SolarEdge</name>
    <description><![CDATA[Uses the server api of: <a href="https://github.com/isc-konstanz/OpenSolarEdge/blob/master/doc/img/SolarEdge_logo.svg.png">solar edge</a><br>
    
    
      ]]>
    </description>
    
    <deviceAddress>
      <syntax>
        <keyValue>false</keyValue>
        <separator>;</separator>
      </syntax>

      <option id="address">
        <name>Url of SolarEdge Site</name>
        <description><![CDATA[
        	Url of SolarEdge Site.<br><br>
            <b>Example:http://monitoringapi.solaredge.com/</b> 
          ]]>
        </description>
        <mandatory>false</mandatory>
        <type>STRING</type>
        <default>http://monitoringapi.solaredge.com</default>
      </option>

      <option id="siteId">
        <name>Site Id</name>
        <description><![CDATA[
        	Site Id of SolarEdge Site.<br><br>
          ]]>
        </description>
        <mandatory>true</mandatory>
        <type>INTEGER</type>
      </option>
    </deviceAddress>

    <deviceSettings>
       <syntax>
        <keyValue assignment="=">true</keyValue>
        <separator>;</separator>
      </syntax>
      
      <option id="authentication">
        <name>Authentication</name>
        <description><![CDATA[
        	Authentication for access the site.<br><br>
          ]]>
        </description>
        <mandatory>true</mandatory>
        <type>STRING</type>
      </option>      
    </deviceSettings>

    <channelAddress>
      <syntax>
        <keyValue>false</keyValue>
        <separator>;</separator>
      </syntax>
     
      <option id="path">
        <name>Value Path</name>
        <description><![CDATA[
            The path where to get the value for the channel. 
            For Syntax see: <a href="https://support.smartbear.com/alertsite/docs/monitors/api/endpoint/jsonpath.html">Json Path Syntax</a><br><br>
            <b>Example:$.energyDetails.meters[?(@.type=='Production')].values[0].value</b> 
         ]]>
		</description>
        <mandatory>true</mandatory>
        <type>STRING</type>
      </option>
    </channelAddress>
   
    <channelSettings>
       <syntax>
        <keyValue assignment="=">true</keyValue>
        <separator>;</separator>
      </syntax>

      <option id="timePath">
        <name>Time Path</name>
        <description><![CDATA[
            The path where to get the time value for the channel,
            if a time value exist. Otherwise it could be omitted.
            In case the time value not exits, the end time of the request is used
            or the current time.
            For Syntax see: <a href="https://support.smartbear.com/alertsite/docs/monitors/api/endpoint/jsonpath.html">Json Path Syntax</a><br><br>            
            <b>Example:$.energyDetails.meters[?(@.type=='Production')].values[0].date</b> 
          ]]>
        </description>
        <mandatory>false</mandatory>
        <type>STRING</type>
      </option>
      <option id="timeUnit">
        <name>Time Unit</name>
        <description><![CDATA[
            <br><br>            
            <b>Example:QUARTER_OF_AN_HOUR</b> 
          ]]>
        </description>
        <mandatory>false</mandatory>
        <type>STRING</type>
      </option>
      <option id="serial">
        <name>Serial Number</name>
        <description><![CDATA[
            The Serial Number of the channel device only for Inverter Technical 
            Data and Equipment Change Log requests<br><br>            
            <b>Example:12345678-90</b> 
          ]]>
        </description>
        <mandatory>false</mandatory>
        <type>STRING</type>
      </option>
    </channelSettings>
  </driver>
</configuration>
    